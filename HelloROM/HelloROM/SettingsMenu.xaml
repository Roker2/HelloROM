<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloROM.SettingsMenu"
             Title="Settings">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection Title="Internet connection">
                    <SwitchCell x:Name="UseMobileConnection" Text="Update catalog with mobile connection" On="True" OnChanged="UseMobileInternet_OnChanged"/>
                </TableSection>
                <TableSection Title="Data">
                    <ViewCell>
                        <Button x:Name="SortTypeButton" TextColor="#757575" BorderWidth="0" BackgroundColor="Transparent" HorizontalOptions="Start" VerticalOptions="StartAndExpand" Clicked="SortTypeButton_Clicked"/>
                    </ViewCell>
                    <ViewCell>
                        <Button x:Name="CustomJSONFile" Text="Use custom catalog from file" TextColor="#757575" BorderWidth="0" BackgroundColor="Transparent" HorizontalOptions="Start" VerticalOptions="StartAndExpand" Clicked="CustomJSONFile_Clicked"/>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>