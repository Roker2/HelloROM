<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloROM.PageAddROM">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Entry x:Name="ROMName" Placeholder="Name" Margin="0, 10, 0, 0"/>
                <Entry x:Name="ROMBase" Placeholder="Base"/>
                <Entry x:Name="PicURL" Placeholder="URL Picture" Keyboard="Url"/>
                <Entry x:Name="ROMDescription" Placeholder="Description"/>
                <Entry x:Name="ROMSite" Placeholder="Official site" Keyboard="Url"/>
                <Entry x:Name="ROMGerrit" Placeholder="Gerrit" Keyboard="Url"/>
                <Entry x:Name="ROMGithub" Placeholder="Github" Keyboard="Url"/>
                <Entry x:Name="ScreenshotsNumber" Keyboard="Numeric" TextChanged="ScreenshotsNumber_TextChanged" Text="0" Placeholder="Screenshots Number"/>
                <StackLayout x:Name="Screenshots"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Button x:Name="Preview" Text="Preview" Clicked="Preview_Clicked" BackgroundColor="White"/>
                    <Button x:Name="SaveToJSON" Text="Share JSON" Clicked="SaveToJSON_Clicked" BackgroundColor="White"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>